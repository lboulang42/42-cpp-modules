################################################################################
#                                  SOURCES                                     #
################################################################################

SRC_FILES	=	$(addprefix Classes/, A.cpp) \
				$(addprefix Classes/, B.cpp) \
				$(addprefix Classes/, C.cpp) \
				$(addprefix Classes/, Base.cpp) \
				main.cpp

################################################################################
#                                  OBJETS                                      #
################################################################################

OBJS_DIR	= objs
OBJS		= $(SRC_FILES:%.cpp=$(OBJS_DIR)/%.o)

################################################################################
#                                COMPILATION                                   #
################################################################################

CC			= c++
CFLAGS		= -g3 -std=c++98 -Wall -Wextra -Werror -I Includes -MMD -MP

################################################################################
#                                  MAKEFILE                                    #
################################################################################

NAME = ex02

all : $(NAME)

$(NAME) : $(OBJS_DIR) $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) -o $(NAME)
	
$(OBJS_DIR) :
	mkdir $(OBJS_DIR)
	mkdir $(OBJS_DIR)/Classes

-include $(OBJS:%.o=%.d)

$(OBJS) : $(OBJS_DIR)/%.o : %.cpp
	$(CC) $(CFLAGS) -c $< -o $@

clean :
	rm -rf $(OBJS_DIR)

fclean: clean
	rm -rf $(NAME)
	
re : fclean all

.PHONY: all clean fclean re
